@using ITUniversity.Tasks.Application.Services.Dto
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@model TaskDto
@{
    Func<TaskDto, string> calculateCardTitleStyle = task =>
   {
       return $"display: flex;{(string.IsNullOrWhiteSpace(task.Description)? "margin-bottom: px":"")}";
   };

    Func<TaskDto, string> calculateBadgeClass = task =>
    {
        return $"badge badge-{(task.Status == ITUniversity.Tasks.Enums.TasksStatus.ToDo ? "primary" : "success")}";
    };
}

    <div class="card" id="task_@Model.Id">
        <div class="card-body">
            <div style="display: flex">
                <h5 class="card-title" style="@calculateCardTitleStyle(Model)">
                    <a class="" style="float: right; cursor: pointer;" href="Task/Details?id=@Model.Id">@Model.Subject</a>
                    <span class="@calculateBadgeClass(Model)" style="margin-left: 5px;">
                        @Model.Status
                    </span>
                </h5>
                <div style="width: 100%;">
                    <span class="material-icons" style="float: right; cursor: pointer; color: red;" onclick="task.delete('@Model.Id', this)">
                        delete
                    </span>

                    <a class="material-icons" style="float: right; cursor: pointer;" href="Task/Edit?id=@Model.Id">edit</a>
                    
                        @*<span class="material-icons" style="float: right; cursor: pointer;">
                            edit
                        </span>*@
                    

                </div>
            </div>
            @Model.Description
        </div>
    </div>