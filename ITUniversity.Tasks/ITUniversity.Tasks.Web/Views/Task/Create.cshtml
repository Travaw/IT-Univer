

@model TaskCreateModel


@using (Html.BeginForm("Create", "Task"))
{

    <div class="form-group ">
        <div class="col-2">
            @Html.LabelFor(model => Model.Subject, new { @class = "" })
        </div>
        <div class="col-4">
            @Html.EditorFor(model => Model.Subject, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => Model.Subject)
        </div>
    </div>
    <div class="form-group">
        <div class="col-2">
            @Html.LabelFor(model=>Model.Description,  new { @class = "" })
        </div>
        <div class="col-4">
            @Html.TextAreaFor(model => Model.Description,  new { @class = "form-control" })
            @Html.ValidationMessageFor(model => Model.Description)
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2 text-center">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
            <div class="col-2 text-center">
                @Html.ActionLink("Cancel", "Index", "Task", null, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>

}

@section scripts
{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
}
